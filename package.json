{
    "name": "rules-beautify",
    "displayName": "rules-beautify",
    "description": "",
    "version": "0.0.1",
    "bugs": {
        "url": "https://github.com/avinashkris9/"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/avinashkris9/"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Snippets"
    ],
    "keywords": [
        "rules",
        "netcool",
        "tivoli",
        "objectserver",
        "probes",
        "omnibus",
        "IBM"
    ],

    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:probe-rules"
    ],
    "contributes": {
        "languages": [
            {
                "id": "probe-rules",
                "aliases": [
                    "rules",
                    "probe-rules"
                ],
                "extensions": [
                    ".rules",
                    ".include"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "probe-rules",
                "scopeName": "source.probe-rules",
                "path": "./src/syntaxes/probe-rules.tmLanguage.json"
            }
        ],
        "snippets": [
            {
              "language": "probe-rules",
              "path": "./src/syntaxes/probe-rules.snippets.json"
            }],
        "configuration": {
            "title": "ProbeRules",
            "properties": {
              "probeRules.indentWithWhiteSpace": {
                "type": "boolean",
                "default": true,
                "description": "Use white space as indentation character."
              },
              "probeRules.numberOfWhiteSpaces": {
                "type": "number",
                "default": 4,
                "description": "Number of whitespaces for indentation string."
              },
              "probeRules.splitBracesToNewLine": {
                "type": "boolean",
                "default": false,
                "description": "Split the curly braces to new lines."
              }
              ,
              "probeRules.backupBeforeFormatting": {
                "type": "boolean",
                "default": true,
                "description": "Take a file backup before running formatter."
              }
            }
          }
    },
   "scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
  "devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
